-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Kucipong
                     , Kucipong.Aws
                     , Kucipong.Config
                     , Kucipong.Db
                     , Kucipong.Db.Models
                     , Kucipong.Db.Models.Base
                     , Kucipong.Db.Models.EntityDefs
                     , Kucipong.Db.Pool
                     , Kucipong.Db.Run
                     , Kucipong.Email
                     , Kucipong.Environment
                     , Kucipong.Errors
                     , Kucipong.Form
                     , Kucipong.Handler
                     , Kucipong.Handler.Admin
                     , Kucipong.Handler.Admin.Types
                     , Kucipong.Handler.Store
                     , Kucipong.Handler.Store.Types
                     , Kucipong.Handler.Static
                     , Kucipong.Handler.Static.TH
                     , Kucipong.Host
                     , Kucipong.I18n
                     , Kucipong.I18n.Class
                     , Kucipong.I18n.Instance
                     , Kucipong.I18n.Types
                     , Kucipong.LoginToken
                     , Kucipong.Monad
                     , Kucipong.Monad.Cookie
                     , Kucipong.Monad.Cookie.Class
                     , Kucipong.Monad.Cookie.Instance
                     , Kucipong.Monad.Cookie.Trans
                     , Kucipong.Monad.Db
                     , Kucipong.Monad.Db.Class
                     , Kucipong.Monad.Db.Instance
                     , Kucipong.Monad.Db.Trans
                     , Kucipong.Monad.OtherInstances
                     , Kucipong.Monad.SendEmail
                     , Kucipong.Monad.SendEmail.Class
